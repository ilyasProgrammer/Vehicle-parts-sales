<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
    <record id="parts_tree" model="ir.ui.view">
        <field name="name">fleet.part.line.tree</field>
        <field name="model">fleet.part.line</field>
        <field name="arch" type="xml">
            <tree>
                <!--<field name="vehicle_id"/>-->
                <field name="product_id"/>
                <field name="guid"/>
                <field name="type"/>
                <field name="rate"/>
                <field name="price"/>
                <field name="sellingRate"/>
                <field name="weight"/>
                <field name="volume"/>
            </tree>
        </field>
    </record>
    <record id="parts_form" model="ir.ui.view">
        <field name="name">fleet.part.line.form</field>
        <field name="model">fleet.part.line</field>
        <field name="arch" type="xml">
            <form string="Деталь (товар)">
                <sheet>
                    <group>
                        <group>
                            <field name="vehicle_id"/>
                            <field name="product_id"/>
                            <field name="guid"/>
                            <field name="type"/>
                            <field name="rate"/>
                        </group>
                        <group>
                            <field name="price"/>
                            <field name="sellingRate"/>
                            <field name="weight"/>
                            <field name="volume"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</data>
</odoo>
